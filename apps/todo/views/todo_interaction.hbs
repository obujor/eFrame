<div id="todo" class="text-center">
	<style type = "text/css" scoped>
    h3 { 
    	margin-top: 0px;
    } 
    .row {
    	margin-bottom: 5px;
    }
    </style>
	<h3>Inserisci le cose da fare</h3>
	<h4>e spunta quelle gia' fatte</h4>
	<form>
		{{#times 10}}
		<div class="row">
		    <div class="input-group">
		      <span class="input-group-addon">
		        <input type="checkbox" aria-label="..." name="done_{{this}}" {{#ifProp @root "done_" this }} checked {{/ifProp}} >
		      </span>
		      <input type="text" class="form-control" aria-label="..." maxlength="30" name="task_{{this}}" value="{{getProp @root "task_" this}}">
		    </div><!-- /input-group -->
		</div><!-- /.row -->
		{{/times}}
	</form>
</div>